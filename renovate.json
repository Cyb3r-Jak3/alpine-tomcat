{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],

  "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^docker-bake.hcl$"],
        "matchStrings": ["datasource=(?<datasource>.*?) depName=(?<depName>apache\/tomcat)\ndefault = \"(?<currentValue>.*)\""],
        "replaceString": "datasource=${datasource} depName=${depName}\ndefault = \"${currentValue}\""
      }
    ]
}
