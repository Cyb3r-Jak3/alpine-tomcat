{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "docker:pinDigests"
  ],

  "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^docker-bake.hcl$"],
        "matchStrings": ["datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s.*=(?<currentValue>.*)\\s"]
      }
    ]
}
